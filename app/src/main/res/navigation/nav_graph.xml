<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movies">
    <fragment
        android:id="@+id/movies"
        android:name="com.example.movieapp.fragments.Movies"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies" >
        <action
            android:id="@+id/action_movies_to_addMovies"
            app:destination="@id/addMovies" />
        <action
            android:id="@+id/action_movies_to_editMovies"
            app:destination="@id/editMovies" />
        <action
            android:id="@+id/action_movies_to_avangers"
            app:destination="@id/avangers" />
    </fragment>
    <fragment
        android:id="@+id/addMovies"
        android:name="com.example.movieapp.fragments.addMovies"
        android:label="fragment_add_movies"
        tools:layout="@layout/fragment_add_movies" />
    <fragment
        android:id="@+id/avangers"
        android:name="com.example.movieapp.fragments.Avangers"
        android:label="fragment_avangers"
        tools:layout="@layout/fragment_avangers" />
    <fragment
        android:id="@+id/editMovies"
        android:name="com.example.movieapp.fragments.EditMovies"
        android:label="fragment_edit_movies"
        tools:layout="@layout/fragment_edit_movies" />
</navigation>